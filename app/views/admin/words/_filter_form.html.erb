<div id="filter-form" class="text-center">
  <%= form_tag admin_words_path, method: :get, class: "form-inline" do %>
    <%= label_tag "#", t("admin.categories.name-singular") %>
    <%= select_tag :category_id,
      options_from_collection_for_select(@categories, :id, :name,
      params[:category_id]), {include_blank: t("all"), class: "form-control"} %>
    <%= submit_tag t("filter"), class: "form-control" %>
  <% end %>
</div>
