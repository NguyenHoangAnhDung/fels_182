<div class="input-group">
  <span class="input-group-addon">
    <%= f.radio_button :is_true, :true, {checked: f.object.is_true, class: "answer-option"} %>
    <%= f.hidden_field :is_true, class: "hidden_for_answer" %>
  </span>
  <%= f.text_field :content, class:"form-control" %>
  <%= f.hidden_field :_destroy %>
  <span class="input-group-addon">
    <%= link_to t("remove"), "#", class: "remove_fields pull-right" %>
  </span>
</div>


