<aside>
  <div id="menu">
    <ul>
      <% if logged_in? %>
        <li id="home" class="nav"><%= link_to t("home_page"),
          current_user %></li>
        <li id="logout" class="nav"><%= link_to t("sign_out"),
          session_path(current_user), method: :delete %>
        </li>
        <li id="find" class="nav"><%= link_to t("find"), "#" %></li>
        <li id="info" class="nav"><%= link_to t("profile"),
          current_user %></li>
        <li id="history" class="nav"><%= link_to t("contact"), "#" %></li>
        <li id="category" class="nav">
          <%= link_to t("admin.categories.name-singular"),
            admin_categories_path %>
        </li>
      <% else %>
        <li id="home" class="nav"><%= link_to t("home_page"), root_path %></li>
        <li id="login" class="nav"><%= link_to t("sign_in"), root_path %></li>
        <li id="register" class="nav">
          <%= link_to t("sign_up"), new_user_path %>
        </li>
      <% end %>
    </ul>
  </div>
</aside>
