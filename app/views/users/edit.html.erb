<% provide :title, t("sign_up") %>
<div id="content">
  <div class="whereheader">
    <%= link_to t("edit_profile"), "#", class: "large" %>
  </div>
  <div id="signupform">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-sign">
        <div class="gravatar_edit">
          <%= gravatar_for @user %>
          <%= link_to t("change_img"), "http://gravatar.com/emails",
            targets: "_blank" %>
        </div>

        <%= f.text_field :fullname, placeholder: t("full_name_placeholder") %>
        <%= f.email_field :email, placeholder: t("email_placeholder") %>
        <%= f.password_field :password,
          placeholder: t("password_placeholder") %>
        <%= f.password_field :password_confirmation,
          placeholder: t("password_confirmation_placeholder") %>
        <div class="gender">
          <%= f.select :gender, [[t("male"), true], [t("female"), false]] %>
        </div>
        <%= f.submit t("save_change") %>
      </div>
    <% end %>
  </div>
</div>
