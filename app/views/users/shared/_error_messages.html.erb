<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= @user.erros.count %> error.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= messages %></li>
      <% end %>
    </ul>
  </div>
<% end %>
